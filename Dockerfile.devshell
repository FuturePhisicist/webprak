FROM eclipse-temurin:21-jdk

# Install psql client + useful tools
RUN apt-get update \
  && apt-get install -y --no-install-recommends \
     postgresql-client \
     bash \
     ca-certificates \
     curl \
     git \
     unzip \
     procps \
  && rm -rf /var/lib/apt/lists/*

WORKDIR /workspace

# Keep container alive for interactive use
CMD ["bash", "-lc", "sleep infinity"]

